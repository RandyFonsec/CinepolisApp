                    tools:layout_editor_absoluteX="106dp"
                    tools:layout_editor_absoluteY="633dp" />

                <ImageView
                    android:id="@+id/imgFood5"
                    android:layout_width="283dp"
                    android:layout_height="144dp"
                    app:srcCompat="@android:drawable/ic_menu_gallery"
                    tools:layout_editor_absoluteX="62dp"
                    tools:layout_editor_absoluteY="709dp" />

                <TextView
                    android:id="@+id/lblFoodPrice5"
                    android:layout_width="200dp"
                    android:layout_height="22dp"
                    android:text="$ 0000"
                    android:textAlignment="center"
                    tools:layout_editor_absoluteX="106dp"
                    tools:layout_editor_absoluteY="892dp" />

                <View
                    android:id="@+id/fooddivider5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="925dp" />

                <TextView
                    android:id="@+id/lblFoodName5"
                    android:layout_width="200dp"
                    android:layout_height="22dp"
                    android:text="Food name 4"
                    android:textAlignment="center"
                    tools:layout_editor_absoluteX="106dp"
                    tools:layout_editor_absoluteY="864dp" />

                <TextView
                    android:id="@+id/lblFoodName1"
                    android:layout_width="200dp"
                    android:layout_height="22dp"
                    android:text="Food name 1"
                    android:textAlignment="center"
                    tools:layout_editor_absoluteX="106dp"
                    tools:layout_editor_absoluteY="170dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/lblSubMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SubMenu"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="99dp" />
</androidx.constraintlayout.widget.ConstraintLayout>