        android:layout_height="548dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblSubMenu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgFood1"
                android:layout_width="283dp"
                android:layout_height="144dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="65dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

            <TextView
                android:id="@+id/lblFoodName1"
                android:layout_width="200dp"
                android:layout_height="22dp"
                android:layout_marginStart="105dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="105dp"
                android:layout_marginBottom="5dp"
                android:text="Food name 1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/lblFoodPrice1"
                android:layout_width="200dp"
                android:layout_height="22dp"
                android:layout_marginStart="105dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="105dp"
                android:layout_marginBottom="15dp"
                android:text="$ 0000"
                android:textAlignment="center" />

            <View
                android:id="@+id/Fooddivider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="?android:attr/listDivider" />

            <ImageView
                android:id="@+id/imgFood2"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="65dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

            <TextView
                android:id="@+id/lblFoodName2"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginStart="105dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="105dp"
                android:layout_marginBottom="5dp"
                android:text="Food name 1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/lblFoodPrice2"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginStart="105dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="105dp"
                android:layout_marginBottom="15dp"
                android:text="$ 0000"
                android:textAlignment="center" />

            <View
                android:id="@+id/fooddivider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="?android:attr/listDivider" />

            <ImageView
                android:id="@+id/imgFood3"
                android:layout_width="match_parent"
                android:layout_height="144dp"
