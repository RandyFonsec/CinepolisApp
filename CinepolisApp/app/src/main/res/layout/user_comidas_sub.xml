                <ImageView
                    android:id="@+id/imgFood3"
                    android:layout_width="283dp"
                    android:layout_height="144dp"
                    app:srcCompat="@android:drawable/ic_menu_gallery"
                    tools:layout_editor_absoluteX="62dp"
