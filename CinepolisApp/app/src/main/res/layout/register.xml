<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003DA5">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="537dp"
        android:background="#003DA5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.701">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#003DA5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número de cédula"
                android:textColor="@color/Amarillo_Cinepolis"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/CedulaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Amarillo_Cinepolis"
                android:ems="10"
                android:hint="Ingrese su número de cédula"
                android:importantForAutofill="no"
                android:inputType="number"
                android:minHeight="48dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#003DA5"
                android:text="Nombre"
                android:textColor="@color/Amarillo_Cinepolis"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/NombreText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Amarillo_Cinepolis"
                android:ems="10"
                android:hint="Ingrese su nombre"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#003DA5"
                android:text="Primer apellido"
                android:textColor="@color/Amarillo_Cinepolis"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ApellidoText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Amarillo_Cinepolis"
                android:ems="10"
                android:hint="Ingrese su primer apellido"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#003DA5"
                android:text="Segundo apellido"
                android:textColor="@color/Amarillo_Cinepolis"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ApellidoText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Amarillo_Cinepolis"
                android:ems="10"
                android:hint="Ingrese su segundo apellido"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#003DA5"
                android:text="Correo electrónico"
                android:textColor="@color/Amarillo_Cinepolis"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/EmailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Amarillo_Cinepolis"
                android:ems="10"
                android:hint="Ingrese su correo electrónico"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edad"
                android:textColor="@color/Amarillo_Cinepolis"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/EdadText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Amarillo_Cinepolis"
                android:ems="10"
                android:hint="Ingrese su edad"
                android:importantForAutofill="no"
                android:inputType="number"
                android:minHeight="48dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de nacimiento"
                android:textColor="@color/Amarillo_Cinepolis"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/FechaNacimientoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Amarillo_Cinepolis"
                android:ems="10"
                android:hint="Fecha de nacimiento"
                android:importantForAutofill="no"
                android:inputType="date"
                android:focusable="false"
                android:clickable="true"
                android:minHeight="48dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Esquema de vacunación"
                android:textColor="@color/Amarillo_Cinepolis"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/EsquemaVacunacionSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundTint="#430D0D"
                android:minHeight="48dp"
                android:textColor="@color/Amarillo_Cinepolis" />


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de usuarios"
        android:textColor="@color/Amarillo_Cinepolis"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09" />

    <Button
        android:id="@+id/RegisterButton"
        style="@style/crear_cuent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.985" />

    <Button
        android:id="@+id/BackRegister"
        android:layout_width="51dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/RegisterButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001" />
</androidx.constraintlayout.widget.ConstraintLayout>