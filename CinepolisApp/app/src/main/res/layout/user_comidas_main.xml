<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:layout_width="376dp"
        android:layout_height="51dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="97dp">

    </SearchView>

    <ImageView
        android:id="@+id/title6"
        android:layout_width="412dp"
        android:layout_height="84dp"
        android:background="@color/Amarillo_Cinepolis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo_cinepolis" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="517dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="167dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblCombos"
                android:layout_width="match_parent"
                android:layout_height="30"
                android:layout_weight="50"
                android:text="Combos" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="220">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" />
            </HorizontalScrollView>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="50"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/lblMenu"
                android:layout_width="match_parent"
                android:layout_height="30"
                android:text="Menu" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="220">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" />
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/azulCInepolis"
            android:backgroundTint="@color/azulCInepolis">

            <Button
                android:id="@+id/btnCartelera"
                style="@style/Widget.Theme.CinepolisApp.MyView"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/azulCinepo"
                android:text="Cartelera" />

            <Button
                android:id="@+id/btnComidas"
                style="@style/Widget.Theme.CinepolisApp.MyView"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/azulCinepo"
                android:text="Comidas" />

            <Button
                android:id="@+id/btnCarrito"
                style="@style/Widget.Theme.CinepolisApp.MyView"
                android:layout_width="155dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/azulCinepo"
                android:text="Carrito" />

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>